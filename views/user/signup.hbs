  <div class="products-catagories-area clearfix">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-5 mt-5">
        <img src="/img/core-img/men.jpg" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
      </div>
      <div class="col-md-6 col-lg-7 d-flex align-items-center">
        <div class="card-body text-black">

          <form action="/signup" method="post" id="audit_id_upload">

            <div class="d-flex align-items-center pb-1">
              <img src="/img/core-img/sfrlogo.png" class="img-fluid" style="height:60px;width:60px;" alt="">
              <span class="h1 fw-bold mb-0">Signup</span>
            </div>

            {{!-- <h5 class="fw-normal mb-2 pb-3" style="letter-spacing: 1px;">Sign into your account</h5> --}}
            {{#if signupErr}}
            <p class="alert alert-danger">{{signupErr}}</p>
            {{/if}}
            {{!-- <div class="form-outline mb-4">
              <input type="text" id="form2Example17" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example17">First Name</label>
            </div> --}}
            <div class="form-outline mb-2">
              <span id="name-error"></span>
              <input type="text" name="username" id="contact-name" class="form-control form-control-lg" onkeyup="validateName()" />
              <label class="form-label" for="form2Example17">Username</label>
            </div>
            <div class="form-outline mb-2">
              <span id="email-error"></span>
              <input type="email" name="email" id="contact-email" class="form-control form-control-lg" onkeyup="validateEmail()" />
              <label class="form-label" for="form2Example17">Email address</label>
            </div>
            <div class="form-outline mb-2">
              <span id="phone-error"></span>
              <input type="text" name="mobileno" id="contact-phone" placeholder="Enter valid 10 numbers"  onkeyup="validatePhone()"  class="form-control form-control-lg" />
              <label class="form-label" for="form2Example17">Mobile No</label>
            </div>

            <div class="form-outline mb-3">
              <span id = "password-error"></span>
              <input type="password" id = "password" name="password" class="form-control form-control-lg" onkeyup="validatePassword()" />
              <label class="form-label" for="form2Example27">Password</label>
            </div>
            <div class="form-outline mb-3">
              <input type="text" id = "referrel" name="referrel" class="form-control form-control-lg"/>
              <label class="form-label" for="form2Example27">Referrel Code</label>
            </div>

            <div class="pt-1">
              <button class="btn btn-dark btn-lg btn-block" type="submit">Signup</button>
            </div>

            {{!-- <a class="small text-muted" href="#!">Forgot password?</a> --}}
            <p class="mb-5 pb-lg-2" style="color: #393f81;">Already have an account? <a href="/login"
                style="color: #393f81;">Login here</a></p>
            {{!-- <a href="#!" class="small text-muted">Terms of use.</a>
            <a href="#!" class="small text-muted">Privacy policy</a> --}}
          </form>
        </div>
      </div>
    </div>
  </div>
