{{!-- section-padding-100 --}}
<div class="products-catagories-area clearfix">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-lg-12 d-flex align-items-center">
        <div class="card-body p-4 p-lg-5 text-black">

          <form action="/admin/edit-category" method="post" id="add-category">
          <div class="ml-auto">
          <a href="/admin/category-management"><i class="fa fa-times text-warning fa-3x"  aria-hidden="true"></i></a>
          </div>
            <div class="d-flex align-items-center mb-3 pb-1">
              <img src="/img/core-img/sfrlogo.png" class="img-fluid" style="height:60px;width:60px;" alt="">
              <span class="h1 fw-bold mb-0">Edit Category</span>
            </div>
            
            <div class="form-outline mb-2">
                {{#if catagoryErr}}
                <p class="alert alert-danger">{{catagoryErr}}</p>
                {{/if}}
                {{#each catagoryDetails}}
              <input type="text" value="{{this.category}}" name="category" id="form2Example17" class="form-control form-control-lg text-uppercase"/>
              <input type="text" value="{{this._id}}" class="d-none" name="id" id="form2Example17" class="form-control form-control-lg"/>
              {{/each}}
              <label class="form-label" for="form2Example17">Category Name</label>
            </div>
            <div class="pt-1">
              <button class="btn btn-dark btn-lg btn-block" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- ##### Main Content Wrapper End ##### -->
