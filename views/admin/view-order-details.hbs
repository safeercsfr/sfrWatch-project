
<!-- ##### Main Content Wrapper End ##### -->
{{!-- cart-table-area --}}
<div class="products-catagories-area clearfix">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-12 mt-3">
                 <div class="container-fluid">
                    <h2>Order Details</h2>
                </div>
                <div style="overflow-x: auto;">
                <font size="2" face="" >
                <table class="table" id="viewusers">
                    <thead>
                        <tr class="bg-warning">
                            {{!-- <th scope="col">No</th> --}}
                            <th scope="col">Date</th>
                            <th scope="col">Address</th>
                            <th scope="col">Name</th>
                            <th scope="col">Payment Method</th>
                            <th scope="col">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {{!-- <th scope="row" class="fs-bold">{{@index}}</th> --}}
                            <td>{{orderDetails.date}}</td>
                            <td>{{orderDetails.deliveryDetails.address}},{{orderDetails.deliveryDetails.town}}<br>{{orderDetails.deliveryDetails.district}}<br>PIN:{{orderDetails.deliveryDetails.pincode}}<br>Mob:{{orderDetails.deliveryDetails.phone}}</td>
                            <td>{{orderDetails.deliveryDetails.name}}</td>
                            <td>{{orderDetails.paymentMethod}}</td>
                            <td>₹ {{orderDetails.totalAmount}}</td>
                        </tr>
                    </tbody>
                </table>
                </font>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-12 mt-5">
                <div style="overflow-x: auto;">
                <font size="2" face="" >
                <table class="table" id="viewusers">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Image</th>
                            {{!-- {{#if this.product.actualPrice}}
                            <th scope="col">Actual Price</th>
                            {{/if}} --}}
                            <th scope="col">Price</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Quantity</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                    {{#each products}}
                        <tr>
                            <th scope="row" class="fs-bold">{{inc @index}}</th>
                            <td><a href="/view-product/{{this.product._id}}"><img  class="img-fluid" style="height: 95px;width: 110px;" src="/product-image/{{this.product._id}}a.jpg" alt=""></a></td>
                            {{!-- {{#if this.product.actualPrice}}
                            <td><del> ₹ {{this.product.actualPrice}}</del></td>
                            {{/if}} --}}
                            <td>₹ {{this.product.price}}</td>
                            <td>{{this.product.name}}</td>
                            <td>{{this.product.category}}</td>
                            <td>{{this.quantity}}</td>
                            <td>{{orderDetails.deliveryDetails.name}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                </font>
                </div>
            </div>
        </div>
    </div>
</div>

