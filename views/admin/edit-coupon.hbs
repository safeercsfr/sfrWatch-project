<div class="products-catagories-area clearfix">
    <div class="container-fluid">
        <div class="text-center mb-5 mt-3">
            <h3>Edit<strong>Coupon</strong></h3>
        </div>
        <form action="/admin/edit-coupon/{{couponDetails._id}}" id="edit-coupon" method="post">
        <div class="row">
            <div class="col-md-6">
                <input type="text" class="form-control" required name="coupon" value="{{couponDetails.coupon}}">
                <label for="proList">Coupon Code</label>
                <input type="Date" class="form-control" required name="starting" id="str" value="{{couponDetails.starting}}">
                <label class="">Starting Date</label>
            </div>
            <div class="col-md-6">
                <input type="text" class="form-control" required min="1" name="offer" max="95"  value="{{couponDetails.offer}}" onkeypress="return isNumber(event)/">
                <label class="">Offer Percentage</label>
                <input type="Date" class="form-control" required name="expiry" id="exp" value="{{couponDetails.expiry}}">
                <label class="">Expiry Date</label>
            </div>
            <div class="col-md-12 d-flex justify-content-center">
                <div class="w-50 ">
                    <input type="submit" value="Edit" id="prosub" class="btn btn-block btn-dark mt-3">
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
                           
<script>
    $(document).ready(function () {
        let today = new Date()
        var dd = today.getDate();
        var mm = today.getMonth() + 1;

        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        today = yyyy + '-' + mm + '-' + dd;

        $('#str').attr('min', today)
        $('#str').change(function () {
            let date = document.getElementById('str').value
            $('#exp').attr('min', date)
        })
    })
</script>
<script>
    function isNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>
